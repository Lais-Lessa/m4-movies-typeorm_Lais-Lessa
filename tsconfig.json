{
    "compilerOptions": {
      "target": "ES2020", 
      "module": "commonjs", 
      "outDir": "./dist", 
      "rootDir": "./src", 
      "strict": true,
      "esModuleInterop": true, 
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true, 
      "strictPropertyInitialization": false
 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  